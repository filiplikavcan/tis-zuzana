<div class="panel gray">
    <span class="anchor" id="{{ c.Questions.Hash }}"></span>
    <div class="prose">
        <div class="text-column">
            <h2>{{ c.Questions.Title }}</h2>
            <div class="lead">
                {{ c.Questions.Content|shortcodes }}
            </div>
        </div>

        {% for Question in c.Questions.Questions %}
            <div class="row questions-list-item">
                <div class="small-12 large-4 columns">
                    <p><strong>{{ Question.Title }}</strong></p>
                </div>
                <div class="small-12 large-8 columns">
                    {{ Question.Content|shortcodes }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>