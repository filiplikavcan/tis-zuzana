<div class="panel gray">
    <div class="prose">
        <div class="text-column">
            <h2>{{ c.Questions.Title }}</h2>
            {{ c.Questions.Content|shortcodes }}
        </div>
        <ul class="questions-list">
            {% for Question in c.Questions.Questions %}
                <li>
                    <div>
                        <h3>{{ Question.Title }}</h3>
                    </div>
                    <div>
                        {{ Question.Content|shortcodes }}
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>